{
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "node",
		"lib": ["ESNext"],
		"target": "ES2022",
		"outDir": "dist",
		"strict": true,
		"noEmit": true,
		"rootDir": "src",
		"useUnknownInCatchVariables": false,
		"skipLibCheck": true,
		"baseUrl": "."
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
